extends layout

block content
  h1 Search Results - Vehicles

  .container-fluid
    .row
      //- Hard-coded array of vehicle objects
      - const results = [
      -   { vehicle_name: 'Sedan', vehicle_type: 'Car', max_speed: 180 },
      -   { vehicle_name: 'Sport Bike', vehicle_type: 'Motorcycle', max_speed: 220 },
      -   { vehicle_name: 'SUV', vehicle_type: 'Car', max_speed: 160 }
      - ]

      //- Iterate over the results array
      each item in results
        .col-sm-2
          .card.mb-3
            .card-body
              h5 #{item.vehicle_name}
              p Type: #{item.vehicle_type}
              p Max Speed: #{item.max_speed} km/h

  //- Link to go back to index or another endpoint
  a(href='/') Back to Home
