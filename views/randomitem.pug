doctype html
html
  head
    title A random item
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    h1 A Random Item Display
    .container
      // Loop exactly 3 times to display 3 random images
      each _, index in [1, 2, 3]
        - let rand = Math.floor(Math.random() * image_names.length)
        img(src=`/images/${image_names[rand]}`, alt=`Item ${rand}`, height="300", width="300")
